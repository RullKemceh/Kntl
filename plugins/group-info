let handler = async (m, { conn, participants, groupMetadata }) => {
    const pp = await conn.profilePictureUrl(m.chat, 'image').catch(_ => null) || './src/avatar_contact.png'
    const { isBanned, welcome, detect, sWelcome, sBye, sPromote, sDemote, antiLink, delete: del } = global.db.data.chats[m.chat]
    const groupAdmins = participants.filter(p => p.admin)
    const listAdmin = groupAdmins.map((v, i) => `${i + 1}. @${v.id.split('@')[0]}`).join('\n')
    const owner = groupMetadata.owner || groupAdmins.find(p => p.admin === 'superadmin')?.id || m.chat.split`-`[0] + '@s.whatsapp.net'
    let text = `*ã€Œ Group Information ã€*\n
*ð¼ð·:* 
${groupMetadata.id}
*ð‘ð´ð‘€ð´:* 
${groupMetadata.subject}
*ð·ð¸ð‘†ð¾ð‘…ð¼ð‘ƒð‘†ð¼:* 
${groupMetadata.desc?.toString() || 'unknown'}
*ð‘‡ð‘‚ð‘‡ð´ð¿ ð‘€ð¸ð‘€ðµð¸ð‘…:*
${participants.length} Members
*ð‘‚ð‘Šð‘ð¸ð‘… ðºð‘…ð‘‚ð‘ˆð‘ƒ:* 
@${owner.split('@')[0]}
*ð´ð·ð‘€ð¼ð‘ ðºð‘…ð‘‚ð‘ˆð‘ƒ:*
${listAdmin}
*ðºð‘…ð‘‚ð‘ˆð‘ƒ ð‘†ð¸ð‘‡ð‘‡ð¼ð‘ðº:*
${isBanned ? 'âœ…' : 'âŒ'} ðµð‘Žð‘›ð‘›ð‘’ð‘‘
${welcome ? 'âœ…' : 'âŒ'} ð‘Šð‘’ð‘™ð‘¥ð‘œð‘šð‘’
${detect ? 'âœ…' : 'âŒ'} ð·ð‘’ð‘¡ð‘’ð‘ð‘¡
${del ? 'âŒ' : 'âœ…'} ð´ð‘›ð‘¡ð‘– ð·ð‘’ð‘™ð‘’ð‘¡ð‘’
${antiLink ? 'âœ…' : 'âŒ'} ð´ð‘›ð‘¡ð‘– ð¿ð‘–ð‘›ð‘˜
*ð‘€ð¸ð‘†ð‘†ð¸ðºð¸ ð‘†ð¸ð‘‡ð‘‡ð¼ð‘ðº:*
ð‘Šð¸ð¿ð¶ð‘‚ð‘€ð¸: ${sWelcome}
ðµð‘Œð¸ð¸: ${sBye}
ð‘ƒð‘…ð‘‚ð‘€ð‘‚ð‘‡ð¸: ${sPromote}
ð·ð¸ð‘€ð‘‚ð‘‡ð¸: ${sDemote}
`.trim()
    conn.sendFile(m.chat, pp, 'pp.jpg', text, m, false, { mentions: [...groupAdmins.map(v => v.id), owner] })
}

handler.help = ['infogrup']
handler.tags = ['group']
handler.command = /^(gro?upinfo|info(gro?up|gc))$/i

handler.group = true

export default handler
